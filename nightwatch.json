{
    "src_folders" : ["tests"],
    "output_folder": "tests_outputs",
    "webdriver" : {
      "start_process": true,
      "server_path": "node_modules/.bin/chromedriver",
      "cli_args": [
        "--verbose"
      ],
      "port": 9515
    },
  
    "test_settings" : {
      "default" : {
        "screenshots": {
          "enabled": true,
          "path": "screenshots",
          "on_failure": true,
          "on_error": true
        },
        "desiredCapabilities": {
          "browserName": "chrome",
          "chromeOptions": {
            "args" : ["--no-sandbox"]
          }
        }
      }
    }
  }